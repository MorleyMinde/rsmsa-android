<resources>

    <style name="Theme.MyAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@color/blue_500</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#fff</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/card</item>
    </style>

    <style name="dialogue_animation">
        <item name="android:windowEnterAnimation">
            @anim/activity_slide_in_left
        </item>
        <item name="android:windowExitAnimation">
            @anim/activity_slide_out_right
        </item>
    </style>

    <style name="MyTheme" parent="@style/Base.Theme.AppCompat.Dialog">

        <item name="colorAccent">@color/blue_500</item>
    </style>

</resources>